# Core Detection Settings
# See README.md for a detailed configuration guide.
SENSITIVITY_THRESHOLD=500.0
ZCR_THRESHOLD=0.1
SPECTRAL_CENTROID_THRESHOLD=1500.0
MIN_CONSECUTIVE_CHUNKS=3
INTERVAL_SECONDS=60

# Telegram Configuration
# Get token from @BotFather. Get chat ID from api.telegram.org/bot<token>/getUpdates
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Fritz!Box Configuration
# Ensure 'WÃ¤hlhilfe' is enabled in Fritz!Box UI.
FRITZ_ENABLED=False
FRITZ_ADDRESS=192.168.178.1
FRITZ_USER=your_username
FRITZ_PASSWORD=your_password
FRITZ_TARGET_NUMBER=**610
FRITZ_RING_DURATION=20

# LINE Configuration
# Get tokens from LINE Developers Console (https://developers.line.biz/console/)
LINE_ENABLED=False
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token
LINE_CHANNEL_SECRET=your_channel_secret
